@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="well col-md-4" style="background-color: #F3F4F0; margin-right: 10px">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Role"></label>
                    <select asp-for="Input.Role" class="form-control" asp-items="@Model.Roles"></select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm" style="background-color: #DE7568; color:black">Register</button>
            </form>
        </div>
        <div class="col-md-7 well" style="background-color: #F3F4F0;">
            <section>
                <h4>Join the Family</h4>
                <hr />
                <div>
                    <p>
                        This is where you can be part of the yarn feed crew and share all the wonderful things are make and find.
                        We connect to your Ravelry profile and bring with it all the projects, patterns and more along with it.
                        If you have any questions or issue making an account just send a message through slack to someone else.
                        This family is always very helpful.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
